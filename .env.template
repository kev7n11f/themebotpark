# =============================
# ThemeBotPark Environment Template
# Copy this file to .env (never commit real secrets) and fill in values.
# =============================

# Node / App Basics
NODE_ENV=development            # 'development' or 'production'
PORT=3001                       # API server port
PUBLIC_URL=http://localhost:3000 # Frontend base URL (React PUBLIC_URL)

# Frontend / API URLs
REACT_APP_API_BASE_URL=http://localhost:3001
SERVER_URL=http://localhost:3001
CLIENT_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# OpenAI
OPENAI_API_KEY=sk-your-openai-key

# Auth / Security
JWT_SECRET=replace_with_strong_random_string
BCRYPT_SALT_ROUNDS=10
LOG_LEVEL=info                  # silent | error | warn | info | debug

# Rate Limiting
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX_REQUESTS=100
CONTACT_RATE_LIMIT_WINDOW_MINUTES=15
CONTACT_RATE_LIMIT_MAX_REQUESTS=5

# Stripe (Billing)
STRIPE_SECRET_KEY=sk_live_or_test_key
STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXX
# Define price IDs (from Stripe Dashboard) - required for plans you expose
STRIPE_PRICE_BASIC=price_xxxxx_basic
STRIPE_PRICE_PRO=price_xxxxx_pro
STRIPE_PRICE_PREMIUM=price_xxxxx_premium
# (Optional) Override success/cancel URLs (else defaults to CLIENT_URL)
STRIPE_SUCCESS_URL=
STRIPE_CANCEL_URL=

# Email (Choose ONE method: SendGrid OR SMTP)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=
# OR SMTP settings
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
ADMIN_EMAIL=admin@themebotpark.com

# Database (future)
DATABASE_URL=

# Misc
# Add any analytics or monitoring keys below (e.g., SENTRY_DSN= )
SENTRY_DSN=