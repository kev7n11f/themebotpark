# Production Environment Variables for ThemeBotPark

# OpenAI API Configuration (Required for AI responses)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Stripe Configuration (Required for payments)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here

# React App Environment Variables (must start with REACT_APP_)
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
REACT_APP_STRIPE_MONTHLY_PRICE_ID=price_your_monthly_price_id
REACT_APP_STRIPE_YEARLY_PRICE_ID=price_your_yearly_price_id
REACT_APP_API_BASE_URL=https://themebotpark-backend.onrender.com

# JWT Secret for Authentication (Required - use a secure key)
JWT_SECRET=your_secure_jwt_secret_key_at_least_32_characters_long_replace_this

# Node Environment
NODE_ENV=production

# Database Configuration (Configure for production)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Email Service Configuration (For password reset and contact form)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@themebotpark.com
ADMIN_EMAIL=support@themebotpark.com

# Analytics Configuration
POSTHOG_API_KEY=phc_your_posthog_api_key
POSTHOG_HOST=https://app.posthog.com

# Production URLs (Frontend on Vercel, Backend on Render)
CLIENT_URL=https://themebotpark.vercel.app
SERVER_URL=https://themebotpark-backend.onrender.com

# Security Configuration (Frontend domain for CORS)
CORS_ORIGINS=https://themebotpark.vercel.app,https://www.themebotpark.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Social Authentication (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
